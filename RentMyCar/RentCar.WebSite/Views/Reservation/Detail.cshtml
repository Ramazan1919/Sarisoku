@model DataEntity.Rezervasyon
@{
    ViewBag.Title = Model != null && Model.Id == 0 ? "Rezervasyon Ekle" : "Rezervasyon Detay";
}

<h2>@ViewBag.Title</h2>

@if (Model != null)
{
<form method="post" action="Detail" class="form-horizontal">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="col-md-2">Alış Tarihi</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.AlisTarihi, new { @class = "form-control", maxlength = 20 })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">İade Tarihi</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.IadeTarihi, new { @class = "form-control", maxlength = 20 })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Alış ve İade</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.AlisveIadeyeri, new { @class = "form-control", maxlength = 200 })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Rezervasyon Durumu</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Status, new { @class = "form-control", maxlength = 2 })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">&nbsp;</label>
        <div class="col-md-4">
            @if (Model.Id > 0 && Model.Status != DataEntity.ReservationsStatus.Cancelled)
            {
                <button type="submit" class="btn btn-danger">İptal Et</button>
            }
            else if (Model.Id > 0)
            {
                <button type="submit" class="btn btn-primary">Aktifleştir</button>
            }
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>
}
else
{
    <p class="alert alert-danger">Görüntülemeye çalıştığınız rezervasyon bulunamadı!</p>
}

