@model  DataEntity.Rezervasyon





<section id="banner" class="lazy hidden-xs" style="margin-top:150px; background-image:url(../../Content/Themes/images/uye_giris_bg.jpg); ">
    <div class="container-fluid">
        <div class="text">
            <h1>Araç Kiralamada</h1>
            <h2>Yepyeni Bir Deneyim</h2>
        </div>

        @using (Html.BeginForm("SearchCar", "Home", FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="form-group col-md-3 ">
                @Html.LabelFor(model => model.AlisYeri, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="dropdown">
                    @Html.EditorFor(model => model.AlisYeri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AlisYeri, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-3 ">
                @Html.LabelFor(model => model.İadeYeri, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="dropdown">
                    @Html.EditorFor(model => model.İadeYeri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.İadeYeri, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group col-md-3 ">
                @Html.LabelFor(model => model.AlisTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="start-date">
                    @Html.EditorFor(model => model.AlisTarihi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AlisTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3 ">
                @Html.LabelFor(model => model.IadeTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class=" end-date">
                    @Html.EditorFor(model => model.IadeTarihi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IadeTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="search col-md-3 ">
                <button type="submit"> Ara</button>
            </div>

        </div>

        }

    </div>
</section>
