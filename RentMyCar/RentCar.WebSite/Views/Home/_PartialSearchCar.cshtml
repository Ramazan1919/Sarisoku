@using RentCar.WebSite.Models
@using BusınessLayer.Concrete

@model  RentCar.WebSite.Models.SearchModel

@{
    var locations = LookupManager.GetLookups(DataEntity.LookupType.Locations);
    var kasatipi = LookupManager.GetLookups(DataEntity.LookupType.KasaTipi);
    var vitesTipi = LookupManager.GetLookups(DataEntity.LookupType.VitesTipi);
    var yakitTipi = LookupManager.GetLookups(DataEntity.LookupType.YakitTipi);
}

<section id="banner" class="lazy hidden-xs" style="margin-top:150px; background-image:url(../../Content/Themes/images/uye_giris_bg.jpg); ">
    <div class="container-fluid">
        <div class="text">
            <h1>Araç Kiralamada</h1>
            <h2>Yepyeni Bir Deneyim</h2>
        </div>

        @using (Html.BeginForm("SearchCar", "Home", FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">

                <div class="form-group col-md-3 ">

                    @Html.LabelFor(model => model.Locations, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="dropdown">
                        @Html.DropDownListFor(x => x.Locations, locations.ToItems(Model == null ? 0 : (int)Model.Locations), new { @class = "form-control" })
                       
                    </div>
                </div>
                <div class="form-group col-md-3 ">
                    @Html.LabelFor(model => model.KasaTipi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="dropdown">
                        @Html.DropDownListFor(x => x.KasaTipi, kasatipi.ToItems(Model == null ? 0 : (int)Model.KasaTipi), new { @class = "form-control" })
                   
                    </div>
                </div>
                <div class="form-group col-md-3 ">
                    @Html.LabelFor(model => model.VitesTipi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="dropdown">
                        @Html.DropDownListFor(x => x.VitesTipi, vitesTipi.ToItems(Model == null ? 0 : (int)Model.VitesTipi), new { @class = "form-control" })
             
                    </div>
                </div>
                <div class="form-group col-md-3 ">
                    @Html.LabelFor(model => model.YakitTipi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="dropdown">
                        @Html.DropDownListFor(x => x.YakitTipi, yakitTipi.ToItems(Model == null ? 0 : (int)Model.YakitTipi), new { @class = "form-control" })
                     
                    </div>
                </div>

                <div class="form-group col-md-3 ">
                    @Html.LabelFor(model => model.AlisTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.TextBoxFor(x => x.AlisTarihi, new { @class = "form-control datepickstart", maxlength = 20 })
                        
                        @Html.ValidationMessageFor(model => model.AlisTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-3 ">
                    @if (ViewBag.hata != null)
                    {
                   <p class="alert ">@ViewBag.hata</p> 
                    }

                    @Html.LabelFor(model => model.IadeTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.TextBoxFor(x => x.IadeTarihi, new { @class = "form-control datepickstart2", maxlength = 20 })
                      
                        @Html.ValidationMessageFor(model => model.IadeTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3 form-group ">
                    <button type="submit" class="btn btn-danger "> Ara</button>
                </div>

            </div>

        }

    </div>
</section>


<link href="~/Content/Scripts/Datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
<style>
    
    
    .ui-datepicker {
        width: auto !important;
    }
    /*body .ui-datepicker td.ui-datepicker-today a { border: 1px solid #0b5caf !important; background: #0b5caf !important; color: #fff !important; }*/
    body .ui-datepicker td span, body .ui-datepicker td a {
        padding: 10px !important;
    }
</style>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/Scripts/Datepicker/bootstrap-datepicker.min.js"></script>
<script src="~/Content/Scripts/Datepicker/bootstrap-datepicker.tr.min.js"></script>

<script type="text/javascript">

    var date = new Date();
    date.setDate(date.getDate() );
    $('.datepickstart').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd-mm-yyyy',
        startDate: date
    });
    $('.datepickstart').datepicker().on('changeDate', function () {
        var temp = $(this).datepicker('getDate');
        var d = new Date(temp);
        d.setDate(d.getDate() );
        $('.datepickend').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy',
            startDate: d
        }).on('changeDate', function () {
            var temp1 = $(this).datepicker('getDate');
            var d1 = new Date(temp1);
            d1.setDate(d1.getDate() );
            $('.datepickthird').datepicker({
                autoclose: true,
                format: 'dd-mm-yyyy',
                startDate: d1
            });
        });
    });
    var date = new Date();
    date.setDate(date.getDate()+1);
    $('.datepickstart2').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd-mm-yyyy',
        startDate: date
    });
    $('.datepickstart2').datepicker().on('changeDate', function () {
        var temp = $(this).datepicker('getDate');
        var d = new Date(temp);
        d.setDate(d.getDate());
        $('.datepickend').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy',
            startDate: d
        }).on('changeDate', function () {
            var temp1 = $(this).datepicker('getDate');
            var d1 = new Date(temp1);
            d1.setDate(d1.getDate());
            $('.datepickthird').datepicker({
                autoclose: true,
                format: 'dd-mm-yyyy',
                startDate: d1
            });
        });
    });



</script>

