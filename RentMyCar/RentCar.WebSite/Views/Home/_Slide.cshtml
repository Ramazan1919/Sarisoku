@using DataEntity
@{

    var getlist = ViewBag.model as IEnumerable<Kampanya>;
    var i = 0;
    var  l = 0;
}
<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        @foreach (var it in getlist)
        {
            i++;
            if (!it.IsActive)
            {
                i--;
            }
        }
        <ol class="carousel-indicators">
            @for (var k = 0; k < i; k++)
            {
                if (k == 0)
                {
                    <li data-target="#myCarousel" data-slide-to="@k" class="active"></li>
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to="@k"></li>
                }


            }
        </ol>
        <!-- Wrapper for slides -->

        <div class="carousel-inner">

            @foreach (var item in getlist)
            {
                
                if (item.IsActive && l == 0)
                {
                    <div class="item active">
                        <img src="~/Content/Admin/Content/Photos/Kampanya/@item.kampanyaUrl" alt="Chania">
                        <div class="carousel-caption">
                            <h1>@item.Text</h1>
                            <h2> % @item.IndirimOrani </h2>
                        </div>
                    </div>
                    l++;
                }
                else if (item.IsActive && l != 0)
                {

                    <div class="item ">
                        <img src="~/Content/Admin/Content/Photos/Kampanya/@item.kampanyaUrl" alt="Chania">
                        <div class="carousel-caption">
                            <h1>@item.Text</h1>
                            <h2> % @item.IndirimOrani Dev İndirim</h2>
                        </div>
                    </div>
                }


            }
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



</div>








