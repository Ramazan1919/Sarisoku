@model DataEntity.Kampanya

@{
    ViewBag.Title = "Edit";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">


        <h2>Düzenle</h2>

        @using (Html.BeginForm("Edit", "Kampanya", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @(Html.HiddenFor(model => model.kampanyaUrl))
                <br />
                <br />
                <input type="file" name="kampanyaUrl" id="kampanyaUrl" class="form-control" />
                <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                <span> <i>Lütfen jpg,png formatı kullanın</i></span>



                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IndirimOrani, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IndirimOrani)
                            @Html.ValidationMessageFor(model => model.IndirimOrani, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-info" />
                        @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }




    </div>

</div>